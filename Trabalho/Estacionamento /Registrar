package estacionamento;
import java.util.Scanner;
/**
 *
 * @author Aluno
 */
public class Registrar {
    public int capacidade;
    public int tipo, minutos, hora , codigo  ; 
    public String[] vaga;
    public String placa,nome,marca,modelo,cor;
    
public Registrar(int capacidade){
    this.capacidade = capacidade;
    this.tipo = tipo;
    this.minutos = minutos;
    this.hora = hora;
    this.cor = cor;
    this.placa = placa;
    this.nome = nome;
    this.marca = marca;
    this.modelo = modelo;
    this.vaga = new String[ capacidade ];
    
}
    
   

public void RegistrarCarro(){
    Scanner entrada = new Scanner(System.in);
    
    
                    
    for (int i = 0; i < capacidade ; i++) {
    if (vaga[i] == null) {
                          
    System.out.println("=== TIPO DE VEÍCULO ===");
    System.out.println("1 - Carro");
    System.out.println("2 - Moto");
    System.out.println("3 - Caminhão/Caminhonete");
    System.out.print("Digite o tipo do veículo: ");
    tipo = entrada.nextInt();
                 
                           
}
    if(tipo == 2 || tipo == 3 || tipo ==1) {
        if (tipo >= 1 && tipo <= 3){
            vaga[i] = "OCUPADO";
            
                                    
}   
                            
                            
                            
    System.out.println("Digite a placa do veículo: ");
    placa = entrada.next();
                            
    System.out.println("Digite a hora de entrada: ");
    hora = entrada.nextInt();
                            
    System.out.println("Digite os minutos de entrada: ");
    minutos = entrada.nextInt();
                           
     System.out.println("Digite o nome do proprietário: ");
    nome = entrada.next();
                            
    System.out.println("Digite a marca do veículo: ");
    marca = entrada.next();
                            
    System.out.println("Digite o modelo do veículo: ");
    modelo = entrada.next();
                            
    System.out.println("Digite a cor do veículo: ");
    cor  = entrada.next();
                            
                            
                            
                            
                            
    if(tipo == 2){
        for(int j = 0 ; j < 2 ; j++){
            if(vaga[j] == null){
                codigo = j; 
                System.out.println("Veículo registrado com sucesso na vaga" + j );
                System.out.println("Codigo do veículo " + codigo + 1);
                System.out.println(vaga[0]);
                System.out.println(vaga[1]);
            }
        }
                                
    }else if (tipo == 3 ){
        for(int j = 4 ; j < 5; j++ ){
            codigo = j; 
            System.out.println("Veículo registrado com sucesso na vaga" + j );
            System.out.println("Codigo do veículo " + codigo + 1);
            
                                
                                
                                
  }
    }else if(tipo == 1 ){ 
        for(int j = 6 ; j < 10 ; j++ ){
            codigo = j; 
            System.out.println("Veículo registrado com sucesso na vaga" + j  );
            System.out.println("Codigo do veículo " + codigo );
                              
                    }
                }else{
                        System.out.println("Não a mais vagas para seu veículo");
                        break; 
                }    
            }
        }
    }
public void Finalizar(){
    
}
}
